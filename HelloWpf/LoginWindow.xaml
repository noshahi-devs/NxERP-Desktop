<Window x:Class="HelloWpf.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NxERP Login"
        Height="520"
        Width="820"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FFFDFB">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Margin="16" CornerRadius="18" Background="#FFFFF5DC" BorderBrush="#FFF4CE74" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#33B45309" BlurRadius="16" ShadowDepth="4" />
            </Border.Effect>
            <Grid Margin="26">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="16" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Image Source="/Assets/NxERP.png" Height="104" Stretch="Uniform" HorizontalAlignment="Left" />
                <StackPanel Grid.Row="2" VerticalAlignment="Center">
                    <TextBlock Text="NxERP Open Source" FontSize="34" FontWeight="Bold" Foreground="#7A2230" />
                    <TextBlock Margin="0,10,0,0" Text="Modern ERP frontend demo with premium white/yellow/light-red theme." TextWrapping="Wrap" Foreground="#8A2D3C" FontSize="14" />
                    <TextBlock Margin="0,8,0,0" Text="No company branding. Open-source style interface." TextWrapping="Wrap" Foreground="#8A2D3C" FontSize="14" />
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Column="1" Margin="0,16,16,16" CornerRadius="18" Background="#FFFFFFFF" BorderBrush="#FFECC6C6" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#227A2230" BlurRadius="16" ShadowDepth="4" />
            </Border.Effect>
            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="18" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Text="Login" FontSize="26" FontWeight="Bold" Foreground="#7A2230" />
                <TextBlock Grid.Row="2" Text="User Name" Foreground="#8A2D3C" FontWeight="SemiBold" Margin="0,0,0,6" />
                <TextBox Grid.Row="3" x:Name="UserNameTextBox" Height="34" Margin="0,0,0,12" Text="admin" />
                <TextBlock Grid.Row="4" Text="Password" Foreground="#8A2D3C" FontWeight="SemiBold" Margin="0,0,0,6" />
                <PasswordBox Grid.Row="5" x:Name="PasswordTextBox" Height="34" Margin="0,0,0,12" Password="1234" />

                <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Exit" Width="92" Height="36" Margin="0,0,10,0" Click="OnExitClick" />
                    <Button Content="Enter NxERP" Width="132" Height="36" Background="#FFFFD36A" BorderBrush="#FFFFD36A" Foreground="#7A2230" FontWeight="Bold" Click="OnLoginClick" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
