<UserControl x:Class="HelloWpf.Pages.ReportsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock FontSize="28" FontWeight="Bold" Foreground="#111827" Text="Reports" />
        <WrapPanel Grid.Row="1" Margin="0,14,0,14">
            <Button Content="Sales Report" Padding="12,7" Margin="0,0,10,0" Background="#334155" Foreground="White" BorderBrush="#334155" />
            <Button Content="Inventory Report" Padding="12,7" Margin="0,0,10,0" Background="White" BorderBrush="#D1D5DB" />
            <Button Content="Profit &amp; Loss" Padding="12,7" Background="White" BorderBrush="#D1D5DB" />
        </WrapPanel>

        <Border Grid.Row="2" Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" CornerRadius="8" Padding="12">
            <StackPanel>
                <TextBlock FontSize="16" FontWeight="SemiBold" Text="Available Reports" />
                <TextBlock Margin="0,8,0,0" Foreground="#4B5563" Text="Monthly Sales Summary" />
                <TextBlock Margin="0,6,0,0" Foreground="#4B5563" Text="Top 10 Selling Items" />
                <TextBlock Margin="0,6,0,0" Foreground="#4B5563" Text="Stock Ageing Analysis" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
