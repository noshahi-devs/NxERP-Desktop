<UserControl x:Class="HelloWpf.Pages.DashboardPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock FontSize="28" FontWeight="Bold" Foreground="#111827" Text="Dashboard" />
            <TextBlock Margin="0,6,0,20" Foreground="#6B7280" FontSize="14" Text="Welcome to your ERP demo panel." />

            <UniformGrid Columns="3">
                <Border Margin="0,0,12,0" Padding="14" Background="#EFF6FF" CornerRadius="8">
                    <StackPanel>
                        <TextBlock FontSize="14" Foreground="#1D4ED8" Text="Today Sales" />
                        <TextBlock Margin="0,6,0,0" FontSize="24" FontWeight="SemiBold" Text="$12,500" />
                    </StackPanel>
                </Border>
                <Border Margin="0,0,12,0" Padding="14" Background="#ECFDF5" CornerRadius="8">
                    <StackPanel>
                        <TextBlock FontSize="14" Foreground="#047857" Text="Pending POs" />
                        <TextBlock Margin="0,6,0,0" FontSize="24" FontWeight="SemiBold" Text="18" />
                    </StackPanel>
                </Border>
                <Border Padding="14" Background="#FEF3C7" CornerRadius="8">
                    <StackPanel>
                        <TextBlock FontSize="14" Foreground="#B45309" Text="Low Stock Items" />
                        <TextBlock Margin="0,6,0,0" FontSize="24" FontWeight="SemiBold" Text="7" />
                    </StackPanel>
                </Border>
            </UniformGrid>

            <Border Margin="0,20,0,0" Padding="16" Background="#F9FAFB" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1">
                <StackPanel>
                    <TextBlock FontSize="16" FontWeight="SemiBold" Text="Quick Notes" />
                    <TextBlock Margin="0,8,0,0" Foreground="#4B5563" Text="This is a frontend-only dummy ERP interface." />
                    <TextBlock Margin="0,4,0,0" Foreground="#4B5563" Text="Use menu items on left to open module pages." />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
