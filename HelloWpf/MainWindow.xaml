<Window x:Class="HelloWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NxERP Pharmacy - Noshahi Developers Inc"
        Height="860"
        Width="1460"
        MinHeight="760"
        MinWidth="1220"
        WindowStartupLocation="CenterScreen"
        Background="#FFFDFB">

    <Window.Resources>
        <LinearGradientBrush x:Key="AppBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFF3FBFF" Offset="0.0" />
            <GradientStop Color="#FFFFFAEE" Offset="0.52" />
            <GradientStop Color="#FFFFF1F7" Offset="1.0" />
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="HeaderBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF1DB15D" Offset="0" />
            <GradientStop Color="#FF18A5B9" Offset="0.56" />
            <GradientStop Color="#FF1769D7" Offset="1" />
        </LinearGradientBrush>

        <Style x:Key="SubMenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFFFF" />
            <Setter Property="Foreground" Value="#7A2230" />
            <Setter Property="BorderBrush" Value="#FFEBC2C2" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="Margin" Value="0,0,0,8" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <Border.Effect>
                                <DropShadowEffect Color="#221A1A1A" BlurRadius="8" ShadowDepth="2" />
                            </Border.Effect>
                            <ContentPresenter Margin="{TemplateBinding Padding}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFFFF5D8" />
                    <Setter Property="BorderBrush" Value="#FFF1CD6D" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PrimaryActionButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#7A2230" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12" Background="#FFFFD36A">
                            <Border.Effect>
                                <DropShadowEffect Color="#33B45309" BlurRadius="14" ShadowDepth="4" />
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryActionButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#7A2230" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="16,10" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="#FFFFF4F4" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="12" Background="{TemplateBinding Background}" BorderBrush="#FFE5B8B8" BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect Color="#22554545" BlurRadius="10" ShadowDepth="3" />
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#7A2230" />
            <Setter Property="Margin" Value="0,0,0,6" />
        </Style>

        <Style x:Key="InputContainerStyle" TargetType="Border">
            <Setter Property="Margin" Value="0,0,0,14" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Background" Value="#FFFFFFFF" />
            <Setter Property="BorderBrush" Value="#FFE5B8B8" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Padding" Value="8,2" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#14202020" BlurRadius="8" ShadowDepth="2" />
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="InputTextStyle" TargetType="TextBox">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="#7A2230" />
            <Setter Property="Height" Value="32" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>

        <Style x:Key="InputSelectorStyle" TargetType="Control">
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="#7A2230" />
            <Setter Property="Height" Value="32" />
        </Style>
    </Window.Resources>

    <Grid Background="{DynamicResource AppBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="82" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Margin="18,14,18,8" CornerRadius="18" Background="{DynamicResource HeaderBrush}" BorderBrush="#FFF7D68A" BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect Color="#30A16207" BlurRadius="20" ShadowDepth="3" />
            </Border.Effect>
            <Grid Margin="18,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="/Assets/NxERP-Logo.png" Height="54" Stretch="Uniform" Margin="0,0,12,0" />
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="NxERP Pharmacy Suite" FontSize="28" FontWeight="Bold" Foreground="White" />
                        <TextBlock Text="Made by Noshahi Developers Inc" FontSize="13" Foreground="#DFF9FF" FontWeight="SemiBold" />
                        <TextBlock Text="Advanced Pharmacy ERP: Sales, Purchase, Inventory, Finance, Reports" FontSize="12" Foreground="#CEF3FF" />
                    </StackPanel>
                </StackPanel>
                <Border Grid.Column="1" Padding="14,8" CornerRadius="12" Background="#26FFFFFF" BorderBrush="#66FFFFFF" BorderThickness="1" VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="Premium Build" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" />
                        <TextBlock Text="Noshahi Developers Inc" FontWeight="SemiBold" Foreground="#E1F8FF" FontSize="11" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="18,8,18,18">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="370" />
                <ColumnDefinition Width="14" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" CornerRadius="18" Background="#FFFFFBF2" BorderBrush="#FFF0D7A6" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#22805403" BlurRadius="14" ShadowDepth="4" />
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="14">
                        <TextBlock Margin="4,4,4,12" Text="Pharmacy Modules" FontSize="16" FontWeight="Bold" Foreground="#7A2230" />

                        <Expander x:Name="DashboardExpander" IsExpanded="True" Header="Dashboard" Margin="0,0,0,10" FontWeight="Bold" Foreground="#8A2D3C" Expanded="OnModuleExpanded">
                            <StackPanel Margin="6,10,6,4">
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Overview" Tag="dashboard_overview" Click="OnSubMenuClick" />
                            </StackPanel>
                        </Expander>

                        <Expander x:Name="MastersExpander" IsExpanded="False" Header="Masters" Margin="0,0,0,10" FontWeight="Bold" Foreground="#8A2D3C" Expanded="OnModuleExpanded">
                            <StackPanel Margin="6,10,6,4">
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Category Master" Tag="masters_category" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Product Master" Tag="masters_product" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Batch &amp; Expiry Setup" Tag="masters_batch" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Customer Master" Tag="masters_customer" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Supplier Master" Tag="masters_supplier" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Doctor Master" Tag="masters_doctor" Click="OnSubMenuClick" />
                            </StackPanel>
                        </Expander>

                        <Expander x:Name="SalesExpander" IsExpanded="False" Header="Sales" Margin="0,0,0,10" FontWeight="Bold" Foreground="#8A2D3C" Expanded="OnModuleExpanded">
                            <StackPanel Margin="6,10,6,4">
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="POS Billing" Tag="sales_pos" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Sales Invoice" Tag="sales_invoice" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Sales Return" Tag="sales_return" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Credit Note" Tag="sales_credit_note" Click="OnSubMenuClick" />
                            </StackPanel>
                        </Expander>

                        <Expander x:Name="PurchaseExpander" IsExpanded="False" Header="Purchase" Margin="0,0,0,10" FontWeight="Bold" Foreground="#8A2D3C" Expanded="OnModuleExpanded">
                            <StackPanel Margin="6,10,6,4">
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Purchase Order" Tag="purchase_po" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="GRN" Tag="purchase_grn" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Purchase Invoice" Tag="purchase_invoice" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Debit Note" Tag="purchase_debit_note" Click="OnSubMenuClick" />
                            </StackPanel>
                        </Expander>

                        <Expander x:Name="InventoryExpander" IsExpanded="False" Header="Inventory" Margin="0,0,0,10" FontWeight="Bold" Foreground="#8A2D3C" Expanded="OnModuleExpanded">
                            <StackPanel Margin="6,10,6,4">
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Stock In" Tag="inventory_stock_in" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Stock Out" Tag="inventory_stock_out" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Stock Transfer" Tag="inventory_transfer" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Stock Adjustment" Tag="inventory_adjustment" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Expiry Management" Tag="inventory_expiry" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Reorder Planning" Tag="inventory_reorder" Click="OnSubMenuClick" />
                            </StackPanel>
                        </Expander>

                        <Expander x:Name="FinanceExpander" IsExpanded="False" Header="COA &amp; Accounts" Margin="0,0,0,10" FontWeight="Bold" Foreground="#8A2D3C" Expanded="OnModuleExpanded">
                            <StackPanel Margin="6,10,6,4">
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="COA Group" Tag="finance_coa_group" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="COA Head" Tag="finance_coa_head" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="COA Sub Head" Tag="finance_coa_subhead" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Account Master" Tag="finance_account_master" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Cash Book" Tag="finance_cash_book" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Bank Book" Tag="finance_bank_book" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Expense Voucher" Tag="finance_expense_voucher" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Receipt Voucher" Tag="finance_receipt_voucher" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Payment Voucher" Tag="finance_payment_voucher" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Journal Voucher" Tag="finance_jv" Click="OnSubMenuClick" />
                            </StackPanel>
                        </Expander>

                        <Expander x:Name="ReportsExpander" IsExpanded="False" Header="Reports" FontWeight="Bold" Foreground="#8A2D3C" Expanded="OnModuleExpanded">
                            <StackPanel Margin="6,10,6,4">
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Sales Register" Tag="reports_sales_register" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Purchase Register" Tag="reports_purchase_register" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Stock Valuation" Tag="reports_stock_valuation" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Expiry Report" Tag="reports_expiry_report" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Profit &amp; Loss" Tag="reports_profit_loss" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Trial Balance" Tag="reports_trial_balance" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Ledger Report" Tag="reports_ledger" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Invoice Print Format" Tag="reports_invoice_print" Click="OnSubMenuClick" />
                                <Button Style="{DynamicResource SubMenuButtonStyle}" Content="Voucher Print Format" Tag="reports_voucher_print" Click="OnSubMenuClick" />
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Border Grid.Column="2" CornerRadius="18" Background="#FFFFFFFF" BorderBrush="#FFF1D3D3" BorderThickness="1">
                <Border.Effect>
                    <DropShadowEffect Color="#227A2230" BlurRadius="18" ShadowDepth="4" />
                </Border.Effect>

                <Grid Margin="18">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="16" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="16" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <TextBlock x:Name="ModuleTitleText" Text="Dashboard" FontSize="30" FontWeight="Bold" Foreground="#7A2230" />
                        <TextBlock x:Name="SubMenuTitleText" Margin="0,3,0,0" Text="Overview" FontSize="18" FontWeight="SemiBold" Foreground="#A23D4B" />
                        <TextBlock x:Name="DescriptionText" Margin="0,6,0,0" Text="Complete pharmacy ERP workflow demo." Foreground="#6F3640" FontSize="13" />
                    </StackPanel>

                    <Border Grid.Row="1" Margin="0,16,0,0" Padding="14" CornerRadius="14" Background="#FFFFF8E8" BorderBrush="#FFF4D98D" BorderThickness="1">
                        <TextBlock x:Name="BreadcrumbText" Text="Dashboard  >  Overview" Foreground="#8B2E3D" FontWeight="SemiBold" />
                    </Border>

                    <Border x:Name="DashboardPanel" Grid.Row="3" Grid.RowSpan="3" CornerRadius="18" Background="#FFFFFFFF" BorderBrush="#FFE7EDF7" BorderThickness="1" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="124" />
                                <RowDefinition Height="12" />
                                <RowDefinition Height="100" />
                                <RowDefinition Height="12" />
                                <RowDefinition Height="220" />
                                <RowDefinition Height="12" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" CornerRadius="16">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Color="#FF24C169" Offset="0" />
                                        <GradientStop Color="#FF12A3CA" Offset="0.55" />
                                        <GradientStop Color="#FF1A70E0" Offset="1" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Grid Margin="18,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="Welcome to NxERP Pharmacy" FontSize="28" FontWeight="Bold" Foreground="White" />
                                        <TextBlock Text="Made by Noshahi Developers Inc" FontSize="14" Foreground="#DDF7FF" />
                                        <TextBlock Text="Smart offline-first pharmacy ERP" FontSize="12" Foreground="#CBF0FF" />
                                    </StackPanel>
                                    <Border Grid.Column="1" Padding="12,10" CornerRadius="12" Background="#2BFFFFFF" BorderBrush="#5EFFFFFF" BorderThickness="1" VerticalAlignment="Center">
                                        <TextBlock Text="Branch: Main Store" Foreground="White" FontWeight="SemiBold" />
                                    </Border>
                                </Grid>
                            </Border>

                            <UniformGrid Grid.Row="2" Columns="4">
                                <Border Margin="0,0,10,0" CornerRadius="12" Padding="12">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FFFF9827" Offset="0" />
                                            <GradientStop Color="#FFFF5D1A" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <StackPanel>
                                        <TextBlock Text="Total Sales" Foreground="#FFF9F9F9" FontWeight="SemiBold" />
                                        <TextBlock Text="₹1,25,500" Foreground="White" FontSize="32" FontWeight="Bold" />
                                        <TextBlock Text="+12% vs yesterday" Foreground="#FFFFF3D9" />
                                    </StackPanel>
                                </Border>
                                <Border Margin="0,0,10,0" CornerRadius="12" Padding="12">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FF1E8DFF" Offset="0" />
                                            <GradientStop Color="#FF065BEA" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <StackPanel>
                                        <TextBlock Text="Total Orders" Foreground="#FFE9F4FF" FontWeight="SemiBold" />
                                        <TextBlock Text="320" Foreground="White" FontSize="32" FontWeight="Bold" />
                                        <TextBlock Text="8% growth" Foreground="#FFCBE3FF" />
                                    </StackPanel>
                                </Border>
                                <Border Margin="0,0,10,0" CornerRadius="12" Padding="12">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FFFF5A50" Offset="0" />
                                            <GradientStop Color="#FFEF2F3B" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <StackPanel>
                                        <TextBlock Text="Out of Stock" Foreground="#FFFFEFEF" FontWeight="SemiBold" />
                                        <TextBlock Text="15 Items" Foreground="White" FontSize="32" FontWeight="Bold" />
                                        <TextBlock Text="Needs urgent purchase" Foreground="#FFFFDADA" />
                                    </StackPanel>
                                </Border>
                                <Border CornerRadius="12" Padding="12">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FF8D64E6" Offset="0" />
                                            <GradientStop Color="#FF6847CB" Offset="1" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <StackPanel>
                                        <TextBlock Text="Low Stock Alert" Foreground="#FFF2EAFF" FontWeight="SemiBold" />
                                        <TextBlock Text="25 Items" Foreground="White" FontSize="32" FontWeight="Bold" />
                                        <TextBlock Text="Reorder recommended" Foreground="#FFE7DDFD" />
                                    </StackPanel>
                                </Border>
                            </UniformGrid>

                            <Grid Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.3*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" CornerRadius="12" Background="#FFFDFEFF" BorderBrush="#FFDCE8F9" BorderThickness="1" Padding="14">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <TextBlock Text="Sales Overview" FontSize="18" FontWeight="Bold" Foreground="#223B78" />
                                        <Canvas Grid.Row="1" Margin="0,12,0,10">
                                            <Polyline Points="0,125 70,90 140,100 210,70 280,58 350,30 420,48 490,10" Stroke="#30B45B" StrokeThickness="4" />
                                            <Polyline Points="0,136 70,126 140,104 210,120 280,110 350,80 420,92 490,58" Stroke="#FF7D22" StrokeThickness="4" />
                                        </Canvas>
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Today's Sales: ₹25,600" FontSize="16" FontWeight="Bold" Foreground="#219647" />
                                            <TextBlock Grid.Column="1" HorizontalAlignment="Right" Text="Monthly Sales: ₹3,45,800" FontSize="16" FontWeight="Bold" Foreground="#1D75D2" />
                                        </Grid>
                                    </Grid>
                                </Border>
                                <Border Grid.Column="2" CornerRadius="12" Background="#FFFFFEFE" BorderBrush="#FFEADDEB" BorderThickness="1" Padding="14">
                                    <StackPanel>
                                        <TextBlock Text="Inventory Status" FontSize="18" FontWeight="Bold" Foreground="#223B78" />
                                        <UniformGrid Margin="0,14,0,0" Columns="3">
                                            <StackPanel>
                                                <Border Width="88" Height="88" CornerRadius="44" BorderBrush="#36B755" BorderThickness="8" HorizontalAlignment="Center">
                                                    <TextBlock Text="80%" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="#26A548" />
                                                </Border>
                                                <TextBlock Margin="0,8,0,0" HorizontalAlignment="Center" Text="In Stock" FontWeight="Bold" Foreground="#2C9C4D" />
                                            </StackPanel>
                                            <StackPanel>
                                                <Border Width="88" Height="88" CornerRadius="44" BorderBrush="#F89E2A" BorderThickness="8" HorizontalAlignment="Center">
                                                    <TextBlock Text="15%" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="#E3840E" />
                                                </Border>
                                                <TextBlock Margin="0,8,0,0" HorizontalAlignment="Center" Text="Low Stock" FontWeight="Bold" Foreground="#E3840E" />
                                            </StackPanel>
                                            <StackPanel>
                                                <Border Width="88" Height="88" CornerRadius="44" BorderBrush="#F14B4B" BorderThickness="8" HorizontalAlignment="Center">
                                                    <TextBlock Text="5%" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="#E63232" />
                                                </Border>
                                                <TextBlock Margin="0,8,0,0" HorizontalAlignment="Center" Text="Out Stock" FontWeight="Bold" Foreground="#E63232" />
                                            </StackPanel>
                                        </UniformGrid>
                                    </StackPanel>
                                </Border>
                            </Grid>

                            <Grid Grid.Row="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.1*" />
                                    <ColumnDefinition Width="1.5*" />
                                    <ColumnDefinition Width="1.1*" />
                                </Grid.ColumnDefinitions>
                                <Border Margin="0,0,10,0" CornerRadius="12" Background="#FFFFFEFE" BorderBrush="#FFE2EAF7" BorderThickness="1" Padding="12">
                                    <StackPanel>
                                        <TextBlock Text="Top Selling Medicines" FontWeight="Bold" FontSize="17" Foreground="#223B78" />
                                        <TextBlock Margin="0,10,0,0" Text="1. Paracetamol - 320 Units" Foreground="#1E3A7D" FontSize="16" />
                                        <TextBlock Margin="0,6,0,0" Text="2. Augmentin - 250 Units" Foreground="#1E3A7D" FontSize="16" />
                                        <TextBlock Margin="0,6,0,0" Text="3. Cough Syrup - 180 Units" Foreground="#1E3A7D" FontSize="16" />
                                    </StackPanel>
                                </Border>
                                <Border Grid.Column="1" Margin="0,0,10,0" CornerRadius="12" Background="#FFFFFEFE" BorderBrush="#FFE2EAF7" BorderThickness="1" Padding="12">
                                    <StackPanel>
                                        <TextBlock Text="Recent Orders" FontWeight="Bold" FontSize="17" Foreground="#223B78" />
                                        <TextBlock Margin="0,10,0,0" Text="#1023  Ali Khan      Completed      ₹4,200" Foreground="#1E3A7D" FontFamily="Consolas" />
                                        <TextBlock Margin="0,6,0,0" Text="#1024  Sara Ahmed    Pending        ₹1,800" Foreground="#1E3A7D" FontFamily="Consolas" />
                                        <TextBlock Margin="0,6,0,0" Text="#1025  Ahmed Raza    Cancelled      ₹750" Foreground="#1E3A7D" FontFamily="Consolas" />
                                        <TextBlock Margin="0,14,0,0" Text="Expiry Alerts: 12 items expiring soon" FontWeight="Bold" Foreground="#E23232" />
                                    </StackPanel>
                                </Border>
                                <Border Grid.Column="2" CornerRadius="12" Background="#FFFFFEFE" BorderBrush="#FFE2EAF7" BorderThickness="1" Padding="12">
                                    <StackPanel>
                                        <TextBlock Text="Tasks &amp; Reminders" FontWeight="Bold" FontSize="17" Foreground="#223B78" />
                                        <TextBlock Margin="0,10,0,0" Text="- Check expiring medicines" Foreground="#1E3A7D" FontSize="16" />
                                        <TextBlock Margin="0,6,0,0" Text="- Update stock levels" Foreground="#1E3A7D" FontSize="16" />
                                        <TextBlock Margin="0,6,0,0" Text="- Process pending orders" Foreground="#1E3A7D" FontSize="16" />
                                        <Border Margin="0,16,0,0" Padding="10" Background="#FF5F4DD8" CornerRadius="10">
                                            <TextBlock Text="Manage Supplier Orders" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" />
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>

                    <Border x:Name="FormSectionBorder" Grid.Row="3" Visibility="Collapsed" CornerRadius="16" Background="#FFFEFCF7" BorderBrush="#FFF4D9B0" BorderThickness="1" Padding="18">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="12" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock x:Name="FormTitleText" Text="Entry Form" FontSize="20" FontWeight="Bold" Foreground="#7A2230" />
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="16" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="16" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock x:Name="Field1Label" Style="{DynamicResource FormLabelStyle}" Text="Code" />
                                    <Border Style="{DynamicResource InputContainerStyle}"><TextBox x:Name="Field1Input" Style="{DynamicResource InputTextStyle}" /></Border>
                                    <TextBlock x:Name="Field4Label" Style="{DynamicResource FormLabelStyle}" Text="Reference" />
                                    <Border Style="{DynamicResource InputContainerStyle}"><TextBox x:Name="Field4Input" Style="{DynamicResource InputTextStyle}" /></Border>
                                </StackPanel>
                                <StackPanel Grid.Column="2">
                                    <TextBlock x:Name="Field2Label" Style="{DynamicResource FormLabelStyle}" Text="Name" />
                                    <Border Style="{DynamicResource InputContainerStyle}"><TextBox x:Name="Field2Input" Style="{DynamicResource InputTextStyle}" /></Border>
                                    <TextBlock x:Name="Field5Label" Style="{DynamicResource FormLabelStyle}" Text="Date" />
                                    <Border Style="{DynamicResource InputContainerStyle}"><DatePicker x:Name="Field5DateInput" Style="{DynamicResource InputSelectorStyle}" /></Border>
                                </StackPanel>
                                <StackPanel Grid.Column="4">
                                    <TextBlock x:Name="Field3Label" Style="{DynamicResource FormLabelStyle}" Text="Status" />
                                    <Border Style="{DynamicResource InputContainerStyle}"><ComboBox x:Name="Field3ComboInput" Style="{DynamicResource InputSelectorStyle}" /></Border>
                                    <TextBlock x:Name="Field6Label" Style="{DynamicResource FormLabelStyle}" Text="Amount" />
                                    <Border Style="{DynamicResource InputContainerStyle}"><TextBox x:Name="Field6Input" Style="{DynamicResource InputTextStyle}" /></Border>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>

                    <Border x:Name="HistorySectionBorder" Grid.Row="5" Visibility="Collapsed" CornerRadius="16" Background="#FFFFF5F5" BorderBrush="#FFF0CACA" BorderThickness="1" Padding="16">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="10" />
                                <RowDefinition Height="220" />
                                <RowDefinition Height="10" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="10" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="14" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="HistoryTitleText" Text="History" FontSize="20" FontWeight="Bold" Foreground="#7A2230" />
                                <TextBlock x:Name="PageInfoText" Grid.Column="1" VerticalAlignment="Bottom" Foreground="#8A2D3C" FontWeight="SemiBold" Text="" />
                            </Grid>
                            <DataGrid Grid.Row="2" x:Name="HistoryGrid" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="Column" CanUserAddRows="False" Background="White" BorderBrush="#FFEBC2C2" BorderThickness="1" SelectionChanged="OnHistorySelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Doc No" Binding="{Binding DocNo}" Width="150" />
                                    <DataGridTextColumn Header="Party" Binding="{Binding Party}" Width="*" />
                                    <DataGridTextColumn Header="Date" Binding="{Binding Date}" Width="130" />
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="130" />
                                    <DataGridTextColumn Header="Amount" Binding="{Binding Amount}" Width="140" />
                                </DataGrid.Columns>
                            </DataGrid>

                            <TextBlock Grid.Row="4" Text="Document / Report Preview" FontSize="16" FontWeight="Bold" Foreground="#7A2230" />
                            <Border Grid.Row="6" CornerRadius="12" BorderBrush="#FFE9BFBF" BorderThickness="1" Background="White" Padding="10">
                                <TextBox x:Name="ReportPreviewText" TextWrapping="Wrap" AcceptsReturn="True" IsReadOnly="True" BorderThickness="0" Background="Transparent" Foreground="#732836" FontFamily="Consolas" />
                            </Border>

                            <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button x:Name="AddButton" Content="Add New" Margin="0,0,10,0" Style="{DynamicResource SecondaryActionButtonStyle}" Click="OnAddClick" />
                                <Button x:Name="PrevButton" Content="Prev" Margin="0,0,10,0" Style="{DynamicResource SecondaryActionButtonStyle}" Click="OnPrevClick" />
                                <Button x:Name="NextButton" Content="Next" Margin="0,0,10,0" Style="{DynamicResource SecondaryActionButtonStyle}" Click="OnNextClick" />
                                <Button x:Name="DeleteButton" Content="Delete" Margin="0,0,10,0" Style="{DynamicResource SecondaryActionButtonStyle}" Click="OnDeleteClick" />
                                <Button Content="Clear" Margin="0,0,10,0" Style="{DynamicResource SecondaryActionButtonStyle}" Click="OnClearClick" />
                                <Button x:Name="SaveButton" Content="Save" Style="{DynamicResource PrimaryActionButtonStyle}" Click="OnSaveClick" />
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>

